@model inmobiliariaBD.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">Iniciar sesión</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Persona.Correo" class="form-label"></label>
                <input asp-for="Persona.Correo" class="form-control" />
                <span asp-validation-for="Persona.Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" class="form-control" type="password" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
