@model inmobiliariaBD.Models.LoginView
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">Iniciar sesión</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Usuario" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Clave" class="form-label">Contraseña</label>
                <input asp-for="Clave" class="form-control" type="password" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
