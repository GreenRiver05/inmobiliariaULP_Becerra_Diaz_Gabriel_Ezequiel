@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inmobiliariaBD</title>
    <!-- Renderiza el título dinámico de la página, combinado con el nombre fijo de la aplicación. -->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/inmobiliariaBD.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/dark.css" asp-append-version="true" />

</head>

<body>
    <!--vista en ASP.NET Core MVC con Razor syntax-->
    <!--Razor syntax: Lenguaje de plantillas que permite mezclar HTML con C# de forma fluida-->
    <!--Tag Helpers: etiquetas especiales como asp-for, asp-action, asp-validation-for, que generan HTML dinámico y facilitan el binding con el modelo-->
    <!--Binding: (o "vinculación") se usa en programación para describir cómo se conectan datos, funciones o eventos entre distintas partes
    de una aplicación. Su significado varía según el contexto-->
    <!--asp-controller="Home" y asp-action="Index" generan rutas como /Home/Index.-->

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">inmobiliariaBD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Propietario" asp-action="Index"><i
                                        class="fa-solid fa-user-tie"></i>Propietarios</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inquilino" asp-action="Index"><i
                                        class="fa-solid fa-user "></i>Inquilinos</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="inmuebleDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-building"></i> Inmuebles
                                </a>
                                <ul class="dropdown-menu bg-dark border-secondary" aria-labelledby="inmuebleDropdown">
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="Inmueble" asp-action="Index">
                                            <i class="fa-solid fa-list me-2"></i> Listado de Inmuebles
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="TipoInmueble"
                                            asp-action="Index">
                                            <i class="fa-solid fa-layer-group me-2"></i> Tipos de Inmueble
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="contratoDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-file-contract"></i> Contratos
                                </a>
                                <ul class="dropdown-menu bg-dark border-secondary" aria-labelledby="contratoDropdown">
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="Contrato" asp-action="Index">
                                            <i class="fa-solid fa-list me-2"></i> Listado de Contratos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="Pago" asp-action="Index">
                                            <i class="fa-solid fa-money-bill-wave me-2"></i> Pagos
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="Multa" asp-action="Index">
                                            <i class="fa-solid fa-triangle-exclamation me-2"></i> Multas
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Index">
                                        <i class="fa-solid fa-users-gear"></i> Usuarios
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="CheckList" asp-action="Index">
                                    <i class="fa-solid fa-clipboard-check"></i> Checklist
                                </a>
                            </li>
                        </ul>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="perfilDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-circle-user me-1"></i>
                                    @User.FindFirst(ClaimTypes.Name)?.Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end bg-dark border-secondary"
                                    aria-labelledby="perfilDropdown">
                                    <li>
                                        <a class="dropdown-item text-light"
                                            asp-controller="Usuario"
                                            asp-action="CreateOrEdit"
                                            asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value"
                                            asp-route-esPerfil="true">
                                            <i class="fa-solid fa-user-pen me-2"></i> Mi perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-light" asp-controller="Usuario" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i> Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 80px;>
        <main role=" main" class="pb-3">

        @RenderBody() <!-- Inserta el contenido de la vista en el layout -->

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Laboratorio II 2025 - inmobiliaria Becerra Diaz Gabriel Ezequiel -
            <a href="https://github.com/GreenRiver05/inmobiliariaULP_Becerra_Diaz_Gabriel_Ezequiel.git" target="_blank">
                <i class="fab fa-github"></i> Repo</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false) <!-- Carga scripts opcionales desde la vista -->

</body>

</html>