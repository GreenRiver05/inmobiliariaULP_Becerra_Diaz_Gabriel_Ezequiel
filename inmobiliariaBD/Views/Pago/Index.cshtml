@model IEnumerable<inmobiliariaBD.Models.Pago>

@{
    ViewData["Title"] = "Listado de Pagos";
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
    var busqueda = ViewBag.Busqueda as string ?? "";
    var estadoPago = ViewBag.EstadoPago as string ?? "";
    var desde = ViewBag.Desde as string ?? "";
    var hasta = ViewBag.Hasta as string ?? "";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3"
        style="background-color: #1e2a38;">
        <i class="fa-solid fa-circle-info me-2 text-info"></i>
        <span class="fw-semibold text-info">Info:</span> @TempData["Mensaje"]
    </div>
}

<h2 class="text-light mb-4">üí∞ Listado de Pagos</h2>

<a asp-action="CreateOrEdit" class="btn btn-outline-success mb-4">
    <i class="fa-solid fa-money-bill-wave"></i> Registrar nuevo pago
</a>

<form method="get" asp-action="Index" class="row g-2 mb-4">

    <input type="hidden" name="pagina" value="1" />

    <!-- Fila 1: Botones de estado -->
    <div class="col-12 d-flex flex-wrap gap-2 mb-2">
        <button type="submit" name="estadoPago" value=""
            class="btn @(string.IsNullOrEmpty(estadoPago) ? "btn-secondary" : "btn-outline-secondary")">
            Todos
        </button>
        <button type="submit" name="estadoPago" value="Pago"
            class="btn @(estadoPago == "Pago" ? "btn-success" : "btn-outline-success")">
            Pagados
        </button>
        <button type="submit" name="estadoPago" value="Pendiente"
            class="btn @(estadoPago == "Pendiente" ? "btn-warning text-dark" : "btn-outline-warning")">
            Pendientes
        </button>
        <button type="submit" name="estadoPago" value="Anulado"
            class="btn @(estadoPago == "Anulado" ? "btn-danger" : "btn-outline-danger")">
            Anulados
        </button>
    </div>

    <!-- Fila 2: b√∫squeda, fechas y bot√≥n -->
    <div class="col-md-4">
        <input type="text" name="busqueda" value="@busqueda" class="form-control"
            placeholder="üîç Buscar por contrato o inquilino" />
    </div>

    <div class="col-md-3">
        <input type="date" name="desde" value="@ViewBag.Desde" class="form-control" />
    </div>

    <div class="col-md-3">
        <input type="date" name="hasta" value="@ViewBag.Hasta" class="form-control" />
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-outline-light w-100">
            Buscar
        </button>
    </div>

</form>



<div class="table-responsive">
    <table class="table table-dark table-bordered table-hover tabla-index">
        <thead class="bg-secondary text-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>Contrato N¬∞</th>
                <th>Inquilino</th>
                <th>@Html.DisplayNameFor(model => model.NumeroPago)</th>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.ContratoId</td>
                    <td>@p.Contrato.Inquilino.Persona.Nombre @p.Contrato.Inquilino.Persona.Apellido</td>
                    <td>@p.NumeroPago</td>
                    <td>$@p.Monto</td>
                    <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@p.Tipo</td>
                    <td>
                        <span
                            class="badge @(p.Estado == "Pago" ? "bg-success" : p.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-danger") px-3 py-2">
                            @p.Estado
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Detalles" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info me-1">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-action="CreateOrEdit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-warning me-1">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                data-bs-target="#confirmModal" data-id="@p.Id" data-contrato="@p.ContratoId"
                                data-inquilino="@p.Contrato.Inquilino.Persona.Nombre @p.Contrato.Inquilino.Persona.Apellido"
                                data-numero="@p.NumeroPago" data-monto="@p.Monto" data-fecha="@p.Fecha.ToString("dd/MM/yyyy")"
                                title="Eliminar">
                                <i class="fa-solid fa-trash"></i>
                            </button>

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Paginaci√≥n">
    <ul class="pagination justify-content-center my-4">
        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link @(paginaActual == 1 ? "bg-dark text-muted border-dark opacity-50" : "bg-dark text-info border-info")"
                asp-action="Index" asp-route-pagina="@(paginaActual - 1)" asp-route-busqueda="@busqueda"
                asp-route-estado="@estadoPago" asp-route-desde="@ViewBag.Desde" asp-route-hasta="@ViewBag.Hasta">
                <i class="fa-solid fa-chevron-left me-1"></i> Anterior
            </a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link @(i == paginaActual ? "bg-info text-dark border-info" : "bg-dark text-info border-info")"
                    asp-action="Index" asp-route-pagina="@i" asp-route-busqueda="@busqueda" asp-route-estado="@estadoPago"
                    asp-route-desde="@ViewBag.Desde" asp-route-hasta="@ViewBag.Hasta">@i</a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link @(paginaActual == totalPaginas ? "bg-dark text-muted border-dark opacity-50" : "bg-dark text-info border-info")"
                asp-action="Index" asp-route-pagina="@(paginaActual + 1)" asp-route-busqueda="@busqueda"
                asp-route-estado="@estadoPago" asp-route-desde="@ViewBag.Desde" asp-route-hasta="@ViewBag.Hasta">
                Siguiente <i class="fa-solid fa-chevron-right ms-1"></i>
            </a>
        </li>
    </ul>
</nav>


<div class="validaciones-info mt-4 border-top pt-3 text-light">
    <h5>üßæ Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ ABM completo (alta, edici√≥n, baja)</li>
        <li>‚úÖ Paginaci√≥n y filtros por estado</li>
        <li>‚úÖ B√∫squeda por contrato e inquilino</li>
        <li>‚úÖ Filtro por rango de fechas</li>
        <li>‚ùå Validaci√≥n de duplicado en n√∫mero de pago</li>
        <li>‚ùå Validaci√≥n de contrato activo antes de registrar</li>
        <li>‚úÖ Eliminaci√≥n con confirmaci√≥n</li>
        <li>‚úÖ Detalles individuales por pago</li>
    </ul>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form id="modal-form" method="post" action="/Pago/Baja">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabel">Confirmar eliminaci√≥n</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro que quer√©s eliminar el siguiente pago?</p>
                    <ul class="list-unstyled">
                        <li><strong>Registro N¬∞:</strong> <span id="modal-id"></span></li>
                        <li><strong>Contrato N¬∞:</strong> <span id="modal-contrato"></span></li>
                        <li><strong>Inquilino:</strong> <span id="modal-inquilino"></span></li>
                        <li><strong>N¬∞ de Pago:</strong> <span id="modal-numero"></span></li>
                        <li><strong>Monto:</strong> $<span id="modal-monto"></span></li>
                        <li><strong>Fecha:</strong> <span id="modal-fecha"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="form-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-outline-danger">Confirmar eliminaci√≥n</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmModal = document.getElementById('confirmModal');
            if (!confirmModal) return;

            confirmModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-id');
                const contrato = button.getAttribute('data-contrato');
                const inquilino = button.getAttribute('data-inquilino');
                const numero = button.getAttribute('data-numero');
                const monto = button.getAttribute('data-monto');
                const fecha = button.getAttribute('data-fecha');

                document.getElementById('modal-id').textContent = id;
                document.getElementById('modal-contrato').textContent = contrato;
                document.getElementById('modal-inquilino').textContent = inquilino;
                document.getElementById('modal-numero').textContent = numero;
                document.getElementById('modal-monto').textContent = monto;
                document.getElementById('modal-fecha').textContent = fecha;

                document.getElementById('form-id').value = id;
            });
        });
    </script>
}