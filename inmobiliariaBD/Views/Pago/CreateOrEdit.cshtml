@model inmobiliariaBD.Models.Pago

@{
    ViewData["Title"] = Model.Id == 0 ? "Nuevo Pago" : "Editar Pago";
}


@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3"
        style="background-color: #1e2a38;">
        <i class="fa-solid fa-circle-info me-2 text-info"></i>
        <span class="fw-semibold text-info">Info:</span> @TempData["Mensaje"]
    </div>
}

<h2 class="text-light mb-4 text-center">
    @(Model.Id == 0 ? "üÜï Nuevo Pago" : "‚úèÔ∏è Editar Pago")
</h2>

<form asp-action="CreateOrEdit" method="post" class="bg-dark text-white p-4 rounded border border-secondary">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        @{
            var contratoFijo = ViewBag.ContratoFijo as bool? ?? false;
        }

        <div class="col-md-5">
            <label asp-for="ContratoId" class="form-label">Contrato</label>

            @if (contratoFijo)
            {
                <select asp-for="ContratoId" asp-items="ViewBag.Contratos"
                    class="form-select bg-dark text-white border-light" disabled="disabled"></select>
                <input type="hidden" asp-for="ContratoId" />
            }
            else
            {
                <select asp-for="ContratoId" asp-items="ViewBag.Contratos"
                    class="form-select bg-dark text-white border-light"></select>
            }

            <span asp-validation-for="ContratoId" class="text-danger small"></span>
        </div>


        <div class="col-md-2">
            <label asp-for="NumeroPago" class="form-label"></label>
            <input asp-for="NumeroPago" class="form-control bg-dark text-white border-light no-spinner" />
            <span asp-validation-for="NumeroPago" class="text-danger small"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Monto" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" type="date" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Fecha" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Detalle" class="form-label">Observaci√≥n</label>
            <textarea asp-for="Detalle" rows="4" class="form-control bg-dark text-white border-light"></textarea>
            <span asp-validation-for="Detalle" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Tipo" class="form-label"></label>
            <select asp-for="Tipo" class="form-select bg-dark text-white border-light">
                <option value="">-- Seleccione Tipo --</option>
                <option value="Total">Total</option>
                <option value="Parcial">Parcial</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger small"></span>
        </div>

        @if (Model.Id == 0)
        {
            <div class="col-md-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select bg-dark text-white border-light">
                    <option value="">-- Seleccione Estado --</option>
                    <option value="Pago">Pago</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Anulado">Anulado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger small"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Estado" />
            <div class="col-md-3">
                <label class="form-label d-block">Estado actual:</label>
                <span
                    class="badge @(Model.Estado == "Pago" ? "bg-success" : Model.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-danger") px-3 py-2">
                    @Model.Estado
                </span>
            </div>
        }

    </div>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary px-4">üíæ Guardar</button>
    </div>
</form>

@if (Model.Id != 0)
{
    <div class="d-flex justify-content-center gap-3 mt-4">


        <form asp-action="ModificarEstado" asp-controller="Pago" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="nuevoEstado" value="Pago" />
            <button type="submit" class="btn btn-sm btn-outline-success">Pagar</button>
        </form>

        <form asp-action="ModificarEstado" asp-controller="Pago" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="nuevoEstado" value="Pendiente" />
            <button type="submit" class="btn btn-sm btn-outline-warning text-yellow">Pendiente</button>
        </form>

        <form asp-action="ModificarEstado" asp-controller="Pago" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="nuevoEstado" value="Anulado" />
            <button type="submit" class="btn btn-sm btn-outline-danger">Anular</button>
        </form>
    </div>
}

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado
    </a>
</div>

<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Validar monto como n√∫mero decimal</li>
        <li>‚ùå Controlar duplicado de n√∫mero de pago</li>
        <li>‚úÖ Sacar spinners de campos num√©ricos</li>
        <li>‚úÖ Mostrar estado como badge + botones</li>
    </ul>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}