@model inmobiliariaBD.Models.Inquilino

@{
    ViewData["Title"] = Model.Id == null ? "Nuevo Inquilino" : "Editar Inquilino";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3" style="background-color: #1e2a38;">
        <i class="fa-solid fa-circle-info me-2 text-info"></i>
        <span class="fw-semibold text-info">Info:</span> @TempData["Mensaje"]
    </div>
}


<h2 class="text-light mb-4">
    @(Model.Id == null ? "üÜï Nuevo Inquilino" : "‚úèÔ∏è Editar Inquilino")
</h2>

<form asp-action="CreateOrEdit" method="post" class="bg-dark text-white p-4 rounded border border-secondary">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Persona.Nombre" class="form-label"></label>
            <input asp-for="Persona.Nombre" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Persona.Nombre" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Dni" class="form-label"></label>
            <input asp-for="Dni" class="form-control bg-dark text-white border-light no-spinner" />
            <span asp-validation-for="Dni" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Persona.Apellido" class="form-label"></label>
            <input asp-for="Persona.Apellido" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Persona.Apellido" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Persona.Telefono" class="form-label"></label>
            <input asp-for="Persona.Telefono" class="form-control bg-dark text-white border-light no-spinner" />
            <span asp-validation-for="Persona.Telefono" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Persona.Direccion" class="form-label"></label>
            <input asp-for="Persona.Direccion" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Persona.Direccion" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Persona.Correo" class="form-label"></label>
            <input asp-for="Persona.Correo" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Persona.Correo" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Persona.Localidad" class="form-label"></label>
            <input asp-for="Persona.Localidad" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Persona.Localidad" class="text-danger small"></span>
        </div>

        @if (Model.Id != null)
        {
            <div class="col-md-4 d-flex align-items-center mt-4">
                <label class="me-2">Estado:</label>
                <span class="badge @(Model.Estado ? "bg-success" : "bg-danger") px-3 py-2">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary px-4">üíæ Guardar</button>
    </div>
</form>

<div class="d-flex justify-content-center gap-3 mt-4">
    @if (Model.Id != null && User.IsInRole("Admin"))
    {
        <form asp-action="ModificarEstado" asp-controller="Inquilino" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-sm @(Model.Estado ? "btn-outline-danger" : "btn-outline-success")">
                @(Model.Estado ? "Dar de baja" : "Dar de alta")
            </button>
        </form>
    }
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado
    </a>
</div>

<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚ùå Verificar formato de correo electr√≥nico</li>
        <li>‚ùå Controlar longitud del tel√©fono</li>
        <li>‚úÖ Verificar que no modifica si cambio el DNI en edici√≥n</li>
        <li>‚ùå Implementar modal para buscar por DNI</li>
        <li>‚úÖ Sacar spinners de los campos num√©ricos</li>
    </ul>
</div>


