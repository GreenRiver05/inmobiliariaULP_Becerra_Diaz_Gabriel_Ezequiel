    <div class="row">
        <div class="form-group col-md-6 mb-3">
            <label asp-for="Persona.Nombre"></label>
            <input asp-for="Persona.Nombre" class="form-control" />
            <span asp-validation-for="Persona.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-3">
            <label asp-for="Dni"></label>
            <input asp-for="Dni" class="form-control no-spinner" />
            <span asp-validation-for="Dni" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="Persona.Apellido"></label>
            <input asp-for="Persona.Apellido" class="form-control" />
            <span asp-validation-for="Persona.Apellido" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-3">
            <label asp-for="Persona.Telefono"></label>
            <input asp-for="Persona.Telefono" class="form-control no-spinner" />
            <span asp-validation-for="Persona.Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="Persona.Direccion"></label>
            <input asp-for="Persona.Direccion" class="form-control" />
            <span asp-validation-for="Persona.Direccion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-3">
            <label asp-for="Persona.Correo"></label>
            <input asp-for="Persona.Correo" class="form-control" />
            <span asp-validation-for="Persona.Correo" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="Persona.Localidad"></label>
            <input asp-for="Persona.Localidad" class="form-control" />
            <span asp-validation-for="Persona.Localidad" class="text-danger"></span>
        </div>
        @if (Model.Id != null)
        {
            <div class="form-group col-md-4">
                <div class="d-flex align-items-center gap-2 mt-4">
                    <label class="mb-0">Estado:</label>
                    @if (Model.Estado)
                    {
                        <span class="badge bg-success px-3 py-2">
                            <i class="bi bi-check-circle-fill me-1"></i> Activo
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary px-3 py-2">
                            <i class="bi bi-x-circle-fill me-1"></i> Inactivo
                        </span>
                    }
                </div>
            </div>
        }
    </div>

    <div class="d-flex gap-3 justify-content-center my-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>


</form>

<div class="d-flex gap-3 justify-content-center my-4">
    @if (Model.Id != null)
    {
        <form asp-action="ModificarEstado" asp-controller="Inquilino" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-sm @(Model.Estado ? "btn-secondary" : "btn-success")">
                @(Model.Estado ? "Dar de baja" : "Dar de alta")
            </button>
        </form>
    }
