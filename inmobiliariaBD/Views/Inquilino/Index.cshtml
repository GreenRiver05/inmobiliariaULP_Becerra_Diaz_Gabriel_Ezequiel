@model IEnumerable<inmobiliariaBD.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}


<h2 class="mb-3">Listado de Inquilinos</h2>

<a asp-action="CreateOrEdit" class="btn btn-success mb-3">➕ Crear nuevo Inquilino</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Dni)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Correo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Persona.Nombre</td>
                <td>@i.Persona.Apellido</td>
                <td>@i.Dni</td>
                <td>@i.Persona.Telefono</td>
                <td>@i.Persona.Correo</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@i.Id" class="btn btn-info btn-sm">🔍</a>
                    <a asp-action="CreateOrEdit" asp-route-id="@i.Id" class="btn btn-warning btn-sm">✏️</a>
                    <a asp-action="Eliminar" asp-route-id="@i.Id" class="btn btn-danger btn-sm">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="validaciones-info mt-4 mb-0">
    <h5>🔍 Validaciones y/o implementaciones:</h5>
    <ul>

        <li>implementar eliminacion o AltaBaja logica (en acciones) ❌</li>
        <li>implementar detalles ❌</li>
        <li>paginacion ❌</li>
        <li>Ordenar lista ❌</li>
        <li>colocar estado o filtrar por estado ❌</li>
        <li>buscar Inquilino ❌</li>
        <li>ABM ✅</li>

    </ul>
</div>
