@model IEnumerable<inmobiliariaBD.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}


<h2 class="mb-3">Listado de Inquilinos</h2>

<a asp-action="CreateOrEdit" class="btn btn-success mb-3">‚ûï Crear nuevo Inquilino</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Dni)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Correo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Persona.Nombre</td>
                <td>@i.Persona.Apellido</td>
                <td>@i.Dni</td>
                <td>@i.Persona.Telefono</td>
                <td>@i.Persona.Correo</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@i.Id" class="btn btn-info btn-sm">üîç</a>
                    <a asp-action="CreateOrEdit" asp-route-id="@i.Id" class="btn btn-warning btn-sm">‚úèÔ∏è</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                        data-bs-target="#confirmModal" data-id="@i.Id" data-nombre="@i.Persona.Nombre"
                        data-apellido="@i.Persona.Apellido" data-dni="@i.Dni" data-telefono="@i.Persona.Telefono"
                        data-correo="@i.Persona.Correo">
                        üóëÔ∏è
                    </button>
                </td>    
            </tr>
        }
    </tbody>
</table>


<div class="validaciones-info mt-4 mb-0">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul>

        <li>implementar eliminacion ‚úÖ</li>
        <li>implementar detalles ‚ùå</li>
        <li>paginacion ‚ùå</li>
        <li>Ordenar lista ‚ùå</li>
        <li>Validaciones antes de eliminar (si tiene o no contrato) ‚ùå</li>
        <li>colocar estado o filtrar por estado ‚ùå</li>
        <li>buscar Inquilino ‚ùå</li>
        <li>ABM ‚úÖ</li>

    </ul>
</div>



<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="modal-form" method="post" action="/Inquilino/Baja">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabel">Confirmar eliminaci√≥n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro que quer√©s eliminar al siguiente Inquilino?</p>
                    <ul class="list-unstyled">
                        <li><strong>N¬∞ Interno:</strong> <span id="modal-id"></span></li>
                        <li><strong>Nombre:</strong> <span id="modal-nombre"></span> <span id="modal-apellido"></span></li>
                        <li><strong>DNI:</strong> <span id="modal-dni"></span></li>
                        <li><strong>Tel√©fono:</strong> <span id="modal-telefono"></span></li>
                        <li><strong>Correo:</strong> <span id="modal-correo"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="form-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Confirmar eliminaci√≥n</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmModal = document.getElementById('confirmModal');
            if (!confirmModal) return;
            confirmModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-id');
                const nombre = button.getAttribute('data-nombre');
                const apellido = button.getAttribute('data-apellido');
                const dni = button.getAttribute('data-dni');
                const telefono = button.getAttribute('data-telefono');
                const correo = button.getAttribute('data-correo');

                document.getElementById('modal-id').textContent = id;
                document.getElementById('modal-nombre').textContent = nombre;
                document.getElementById('modal-apellido').textContent = apellido;
                document.getElementById('modal-dni').textContent = dni;
                document.getElementById('modal-telefono').textContent = telefono;
                document.getElementById('modal-correo').textContent = correo;

               document.getElementById('form-id').value = id;
            });
        });
    </script>
}