@model inmobiliariaBD.Models.Inquilino
@{
    ViewData["Title"] = "Detalle de Inquilino";
    var contratos = ViewBag.Contratos as List<inmobiliariaBD.Models.Contrato>;
}

<h2 class="text-light mb-4">üßç Detalle del Inquilino</h2>

<div class="card bg-dark text-white border-secondary mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fa-solid fa-user"></i> Informaci√≥n del Inquilino
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Nombre/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Nombre</dd>

                    <dt class="col-sm-4">Apellido/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Apellido</dd>

                    <dt class="col-sm-4">DNI</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>

                    <dt class="col-sm-4">Tel√©fono</dt>
                    <dd class="col-sm-8">@Model.Persona.Telefono</dd>
                </dl>
            </div>

            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Correo</dt>
                    <dd class="col-sm-8">@Model.Persona.Correo</dd>

                    <dt class="col-sm-4">Direcci√≥n</dt>
                    <dd class="col-sm-8">@Model.Persona.Direccion</dd>

                    <dt class="col-sm-4">Localidad</dt>
                    <dd class="col-sm-8">@Model.Persona.Localidad</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Estado ? "bg-success" : "bg-danger") px-3 py-2">
                            <i class="fa-solid @(Model.Estado ? "fa-check-circle" : "fa-ban") me-1"></i>
                            @(Model.Estado ? "Activo" : "Inactivo")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<h4 class="text-light mb-3">üìÑ Contratos asociados</h4>

@if (contratos != null && contratos.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover tabla-index">
            <thead class="bg-secondary text-light">
                <tr>
                    <th>N¬∞</th>
                    <th>Inmueble</th>
                    <th>Monto</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contrato in contratos)
                {
                    <tr>
                        <td>@contrato.Id</td>
                        <td>@($"{contrato.Inmueble.Direccion} ({contrato.Inmueble.Localidad})")</td>
                        <td>$ @contrato.Monto</td>
                        <td>@contrato.Desde.ToString("dd/MM/yyyy")</td>
                        <td>@contrato.Hasta.ToString("dd/MM/yyyy")</td>
                        <td>
                            @switch (contrato.Estado)
                            {
                                case "Vigente":
                                    <span class="badge bg-success px-3 py-2">Vigente</span>
                                    break;
                                case "Finalizado":
                                    <span class="badge bg-secondary px-3 py-2">Finalizado</span>
                                    break;
                                case "Rescindido":
                                    <span class="badge bg-danger px-3 py-2">Rescindido</span>
                                    break;
                            }
                        </td>
                        <td class="text-center">
                            <a asp-controller="Contrato" asp-action="Detalles" asp-route-id="@contrato.Id"
                               class="btn btn-sm btn-outline-info" title="Ver contrato">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-dark">Este inquilino no tiene contratos registrados.</div>
}

<a asp-action="Index" class="btn btn-outline-secondary mt-4">
    <i class="fa-solid fa-arrow-left"></i> Volver al listado
</a>
