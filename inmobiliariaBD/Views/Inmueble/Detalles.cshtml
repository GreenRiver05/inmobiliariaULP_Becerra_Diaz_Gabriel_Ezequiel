@model inmobiliariaBD.Models.Inmueble
@{
    ViewData["Title"] = "Detalle de Inmueble";
    var contratos = ViewBag.Contratos as List<inmobiliariaBD.Models.Contrato>;
}

<h2 class="mb-3">üè† Detalle del Inmueble</h2>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        Informaci√≥n del Inmueble
    </div>
    <div class="card-body">
        <div class="row">
           
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Direcci√≥n</dt>
                    <dd class="col-sm-8">@Model.Direccion</dd>

                    <dt class="col-sm-4">Localidad</dt>
                    <dd class="col-sm-8">@Model.Localidad</dd>

                    <dt class="col-sm-4">Propietario</dt>
                    <dd class="col-sm-8">@($"{Model.Propietario.Persona.Nombre} {Model.Propietario.Persona.Apellido}")</dd>
                    
                    <dt class="col-sm-4">Tipo</dt>
                    <dd class="col-sm-8">@Model.TipoInmueble.Tipo</dd>
                </dl>
            </div>

           
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Uso</dt>
                    <dd class="col-sm-8">@Model.Uso</dd>

                    <dt class="col-sm-4">Ambientes</dt>
                    <dd class="col-sm-8">@Model.Ambientes</dd>

                    <dt class="col-sm-4">Precio</dt>
                    <dd class="col-sm-8">$ @Model.Precio</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @if (Model.Estado == "Disponible")
                        {
                            <span class="badge bg-success px-3 py-2">Disponible</span>
                        }
                        else if (Model.Estado == "Alquilado")
                        {
                            <span class="badge bg-warning text-dark px-3 py-2">Alquilado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary px-3 py-2">No Disponible</span>
                        }
                    </dd>

                </dl>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Observacion))
        {
            <div class="mt-3">
                <strong>üìù Observaci√≥n:</strong>
                <p class="mb-0">@Model.Observacion</p>
            </div>
        }
    </div>
</div>

<h4 class="mb-3">üìÑ Contratos asociados</h4>

@if (contratos != null && contratos.Any())
{
    <table class="tabla-index table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>N¬∞</th>
                <th>Inquilino</th>
                <th>Monto</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in contratos)
            {
                <tr>
                    <td>@contrato.Id</td>
                    <td>@($"{contrato.Inquilino.Persona.Nombre} {contrato.Inquilino.Persona.Apellido}")</td>
                    <td>$ @contrato.Monto</td>
                    <td>@contrato.Desde.ToString("dd/MM/yyyy")</td>
                    <td>@contrato.Hasta.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (contrato.Estado == "Vigente")
                        {
                            <span class="badge bg-success px-3 py-2">Vigente</span>
                        }
                        else if (contrato.Estado == "Finalizado")
                        {
                            <span class="badge bg-secondary px-3 py-2">Finalizado</span>
                        }
                        else if (contrato.Estado == "Rescindido")
                        {
                            <span class="badge bg-danger px-3 py-2">Rescindido</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Contrato" asp-action="Detalles" asp-route-id="@contrato.Id"
                           class="btn btn-info btn-sm">üîç Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Este inmueble no tiene contratos registrados.</div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">‚¨ÖÔ∏è Volver al listado</a>
