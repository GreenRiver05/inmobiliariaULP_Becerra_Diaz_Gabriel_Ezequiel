@model inmobiliariaBD.Models.Inmueble
@{
    ViewData["Title"] = "Detalle de Inmueble";
    var contratos = ViewBag.Contratos as List<inmobiliariaBD.Models.Contrato>;
}

<h2 class="text-light mb-4">üè† Detalle del Inmueble</h2>

<div class="card bg-dark text-white border-secondary mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fa-solid fa-building"></i> Informaci√≥n del Inmueble
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Direcci√≥n</dt>
                    <dd class="col-sm-8">@Model.Direccion</dd>

                    <dt class="col-sm-4">Localidad</dt>
                    <dd class="col-sm-8">@Model.Localidad</dd>

                    <dt class="col-sm-4">Propietario</dt>
                    <dd class="col-sm-8">@($"{Model.Propietario.Persona.Nombre} {Model.Propietario.Persona.Apellido}")
                    </dd>

                    <dt class="col-sm-4">Tipo</dt>
                    <dd class="col-sm-8">@Model.TipoInmueble.Tipo</dd>
                </dl>
            </div>

            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Uso</dt>
                    <dd class="col-sm-8">@Model.Uso</dd>

                    <dt class="col-sm-4">Ambientes</dt>
                    <dd class="col-sm-8">@Model.Ambientes</dd>

                    <dt class="col-sm-4">Precio</dt>
                    <dd class="col-sm-8">$ @Model.Precio</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Estado ? "bg-success" : "bg-danger") px-3 py-2">
                            @(Model.Estado ? "Disponible" : "No disponible")
                        </span>
                    </dd>
                </dl>
            </div>

        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Observacion))
        {
            <div class="mt-3">
                <strong>üìù Observaci√≥n:</strong>
                <p class="mb-0">@Model.Observacion</p>
            </div>
        }
    </div>
</div>

<h4 class="text-light mb-3">üìÑ Contratos asociados</h4>

@if (contratos != null && contratos.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover tabla-index">
            <thead class="bg-secondary text-light">
                <tr>
                    <th>N¬∞</th>
                    <th>Inquilino</th>
                    <th>Monto</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contrato in contratos)
                {
                    <tr>
                        <td>@contrato.Id</td>
                        <td>@($"{contrato.Inquilino.Persona.Nombre} {contrato.Inquilino.Persona.Apellido}")</td>
                        <td>$ @contrato.Monto</td>
                        <td>@contrato.Desde.ToString("dd/MM/yyyy")</td>
                        <td>@contrato.Hasta.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span
                                class="badge @(contrato.Estado == "Vigente" ? "bg-success" : contrato.Estado == "Finalizado" ? "bg-secondary" : "bg-danger") px-3 py-2">
                                @contrato.Estado
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Contrato" asp-action="Detalles" asp-route-id="@contrato.Id"
                                class="btn btn-sm btn-outline-info" title="Ver contrato">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-dark">Este inmueble no tiene contratos registrados.</div>
}

<a asp-action="Index" class="btn btn-outline-secondary mt-4">
    <i class="fa-solid fa-arrow-left"></i> Volver al listado
</a>