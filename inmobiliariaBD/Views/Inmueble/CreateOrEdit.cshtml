@using System.Globalization
@model inmobiliariaBD.Models.Inmueble

@{
    ViewData["Title"] = Model.Id == null ? "Nuevo Inmueble" : "Editar Inmueble";
}


@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3"
        style="background-color: #1e2a38;">
        <i class="fa-solid fa-circle-info me-2 text-info"></i>
        <span class="fw-semibold text-info">Info:</span> @TempData["Mensaje"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-danger shadow-sm px-4 py-3 rounded-3"
         style="background-color: #2a1e1e;">
        <i class="fa-solid fa-circle-exclamation me-2 text-danger"></i>
        <span class="fw-semibold text-danger">Error:</span> @TempData["Error"]
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-light border-light">@ViewBag.Error</div>
}

<h2 class="text-light mb-4">
    @(Model.Id == null ? "üÜï Nuevo Inmueble" : "‚úèÔ∏è Editar Inmueble")
</h2>

<form asp-action="CreateOrEdit" method="post" class="bg-dark text-white p-4 rounded border border-secondary">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Direccion" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Localidad" class="form-label"></label>
            <input asp-for="Localidad" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Localidad" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label d-block">Uso</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Uso" value="Comercial" id="usoComercial" />
                <label class="form-check-label" for="usoComercial">Comercial</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Uso" value="Residencial" id="usoResidencial" />
                <label class="form-check-label" for="usoResidencial">Residencial</label>
            </div>
            <span asp-validation-for="Uso" class="text-danger small d-block mt-1"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Ambientes" class="form-label"></label>
            <input asp-for="Ambientes" class="form-control bg-dark text-white border-light no-spinner" />
            <span asp-validation-for="Ambientes" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Precio" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text bg-dark text-white border-light">$</span>
                <input asp-for="Precio" class="form-control bg-dark text-white border-light" />
            </div>
            <span asp-validation-for="Precio" class="text-danger small"></span>
        </div>

        @if (Model.Id == null)
        {
            <div class="col-md-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select bg-dark text-white border-light">
                    <option value="">-- Seleccione Estado --</option>
                    <option value="true">Disponible</option>

                    <option value="false">No Disponible</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger small"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Estado" />
        }

        <div class="col-md-4">
            <label asp-for="TipoId" class="form-label"></label>
            <select asp-for="TipoId" asp-items="ViewBag.TiposInmueble"
                class="form-select bg-dark text-white border-light">
                <option value="">-- Seleccione tipo --</option>
            </select>
            <span asp-validation-for="TipoId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label for="PropietarioId" class="form-label text-light">Propietario</label>

            <div class="input-group">
             

                <select id="PropietarioId" name="PropietarioId"
                    class="form-select w-100">
                    @if (Model?.PropietarioId > 0)
                    {
                        <option value="@Model.PropietarioId" selected>
                            @Model.Propietario?.Persona?.Nombre @Model.Propietario?.Persona?.Apellido - DNI @Model.Propietario?.Dni
                        </option>
                    }
                    else
                    {
                        <option></option>
                    }
                </select>
            </div>

            <span asp-validation-for="PropietarioId" class="text-danger small"></span>
        </div>




        <div class="col-md-6">
            <label asp-for="Observacion" class="form-label"></label>
            <textarea asp-for="Observacion" class="form-control bg-dark text-white border-light"></textarea>
        </div>

        <div class="col-md-3">
            <label asp-for="Latitud" class="form-label"></label>
            <input asp-for="Latitud" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Latitud" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Longitud" class="form-label"></label>
            <input asp-for="Longitud" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Longitud" class="text-danger small"></span>
        </div>

        @if (Model.Id != null)
        {
            <div class="col-md-4 d-flex align-items-center mt-4">
                <label class="me-2">Estado:</label>
                <span class="badge @(Model.Estado is true ? "bg-success" : "bg-danger") px-3 py-2">
                    @(Model.Estado ? "Disponible" : "No disponible")
                </span>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary px-4">üíæ Guardar</button>
    </div>
</form>

<div class="d-flex justify-content-center gap-3 mt-4">
    @if (Model.Id != null)
    {
        var nuevoEstado = Model.Estado;
        <form asp-action="ModificarEstado" asp-controller="Inmueble" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="nuevoEstado" value="@(nuevoEstado ? "false" : "true")" />
            <button type="submit" class="btn btn-sm @(nuevoEstado ? "btn-outline-danger" : "btn-outline-success")">
                @(nuevoEstado ? "Dar de baja temporal" : " Reactivar inmueble")
            </button>
        </form>
    }
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">‚¨ÖÔ∏è Volver al listado </a>
</div>


<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Sacar spinners de los campos num√©ricos</li>
        <li>‚úÖ Validar los campos num√©ricos con coma</li>
        <li>‚úÖ  Cambiar los mensajes de validaci√≥n</li>
        <li>‚úÖ Cambiar el Select, por campo dinamico en propietario</li>
    </ul>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#PropietarioId').select2({ // Inicializa Select2 en el campo PropietarioId
                theme: 'bootstrap-5', // Usa el tema de Bootstrap 5 para que combine con el dise√±o
                language: 'es', // Idioma espa√±ol
                placeholder: "Buscar propietario...", // Texto que se muestra cuando no hay nada seleccionado
                minimumInputLength: 3, // M√≠nimo 3 caracteres para iniciar la b√∫squeda

                // Configuraci√≥n de la b√∫squeda v√≠a AJAX
                ajax: {
                    delay: 250, // Espera 250ms despu√©s de que el usuario deja de escribir para hacer la b√∫squeda
                    dataType: 'json', //Se espera una respuesta JSON
                    cache: true, // Cachea los resultados para no hacer tantas peticiones

                    // URL del endpoint en el servidor que maneja la b√∫squeda
                    url: function (params) {
                        let q = params.term ? encodeURIComponent(params.term) : ""; // T√©rmino de b√∫squeda, codificado para URL
                        return `/Propietario/Buscar/${q}`; // Construye la URL con el t√©rmino de b√∫squeda
                    },

                    // Procesa los resultados devueltos por el servidor para que Select2 los entienda
                    processResults: function (res) {
                        return {
                            // Mapea los datos recibidos a un formato que Select2 puede usar
                            results: res.datos.map(p => ({
                                id: p.id, // Valor que se enviar√° al servidor al seleccionar este propietario
                                text: `${p.persona.nombre} ${p.persona.apellido} - DNI ${p.dni}` // Texto que se mostrar√° en el dropdown
                            }))
                        };
                    }
                }
            });
        });
    </script>

}