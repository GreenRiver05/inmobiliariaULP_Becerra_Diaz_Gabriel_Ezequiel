@model IEnumerable<inmobiliariaBD.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-light border-light">@TempData["Mensaje"]</div>
}

<h2 class="text-light mb-4">üè¢ Listado de Inmuebles</h2>

<a asp-action="CreateOrEdit" class="btn btn-outline-success mb-4">
    <i class="fa-solid fa-plus"></i> Crear nuevo Inmueble
</a>

<div class="table-responsive">
    <table class="table table-dark table-bordered table-hover tabla-index">
        <thead class="bg-secondary text-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Localidad)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Propietario)</th>
                <th>@Html.DisplayNameFor(model => model.TipoInmueble.Tipo)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Direccion</td>
                    <td>@i.Localidad</td>
                    <td>
                        <span
                            class="badge @(i.Estado == "Disponible" ? "bg-success" : i.Estado == "Alquilado" ? "bg-warning text-dark" : "bg-secondary")">
                            @i.Estado
                        </span>
                    </td>
                    <td>$@i.Precio</td>
                    <td>@i.Propietario.Persona.ToStringSimple()</td>
                    <td>@i.TipoInmueble.Tipo</td>
                    <td class="text-center">
                        <a asp-action="Detalles" asp-route-id="@i.Id" class="btn btn-sm btn-outline-info me-1"
                            title="Ver detalles">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-action="CreateOrEdit" asp-route-id="@i.Id" class="btn btn-sm btn-outline-warning me-1"
                            title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                            data-bs-target="#confirmModal" data-inmueble-id="@i.Id" data-direccion="@i.Direccion"
                            data-localidad="@i.Localidad" data-precio="@i.Precio"
                            data-propietario="@i.Propietario.Persona.ToStringSimple()" data-tipo="@i.TipoInmueble.Tipo"
                            title="Eliminar">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Paginaci√≥n">
    <ul class="pagination justify-content-center my-4">

        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link @(paginaActual == 1 ? "bg-dark text-muted border border-dark opacity-50" : "bg-dark text-info border-info") rounded-start"
                asp-action="Index" asp-route-pagina="@(paginaActual - 1)">
                <i class="fa-solid fa-chevron-left me-1"></i> Anterior
            </a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link @(i == paginaActual ? "bg-info text-dark fw-bold border-info" : "bg-dark text-white border-secondary")"
                    asp-action="Index" asp-route-pagina="@i">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link @(paginaActual == totalPaginas ? "bg-dark text-muted border border-dark opacity-50" : "bg-dark text-info border-info") rounded-end"
                asp-action="Index" asp-route-pagina="@(paginaActual + 1)">
                Siguiente <i class="fa-solid fa-chevron-right ms-1"></i>
            </a>
        </li>
    </ul>
</nav>


<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Implementar eliminaci√≥n</li>
        <li>‚úÖ Implementar detalles</li>
        <li>‚ùå Paginaci√≥n</li>
        <li>‚ùå Ordenar lista</li>
        <li>‚ùå Validaciones antes de eliminar (si tiene o no contrato)</li>
        <li>‚ùå Colocar estado o filtrar por estado</li>
        <li>‚ùå Buscar inmueble</li>
        <li>‚úÖ ABM</li>
    </ul>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form id="modal-form" method="post" action="/Inmueble/Baja">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabel">Confirmar eliminaci√≥n</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro que quer√©s eliminar el siguiente inmueble?</p>
                    <ul class="list-unstyled">
                        <li><strong>ID Interno:</strong> <span id="modal-id"></span></li>
                        <li><strong>Direcci√≥n:</strong> <span id="modal-direccion"></span></li>
                        <li><strong>Localidad:</strong> <span id="modal-localidad"></span></li>
                        <li><strong>Tipo:</strong> <span id="modal-tipo"></span></li>
                        <li><strong>Precio:</strong> $<span id="modal-precio"></span></li>
                        <li><strong>Propietario:</strong> <span id="modal-propietario"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="form-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-outline-danger">Confirmar eliminaci√≥n</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmModal = document.getElementById('confirmModal');
            if (!confirmModal) return;

            confirmModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-inmueble-id');
                const direccion = button.getAttribute('data-direccion');
                const localidad = button.getAttribute('data-localidad');
                const tipo = button.getAttribute('data-tipo');
                const precio = button.getAttribute('data-precio');
                const propietario = button.getAttribute('data-propietario');

                document.getElementById('modal-id').textContent = id;
                document.getElementById('modal-direccion').textContent = direccion;
                document.getElementById('modal-localidad').textContent = localidad;
                document.getElementById('modal-tipo').textContent = tipo;
                document.getElementById('modal-precio').textContent = precio;
                document.getElementById('modal-propietario').textContent = propietario;

                document.getElementById('form-id').value = id;
            });
        });
    </script>
}