@model IEnumerable<inmobiliariaBD.Models.Propietario>

@{
    ViewData["Title"] = "Listado de Propietarios";
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<h2 class="text-light mb-4">üìã Listado de Propietarios</h2>
<a asp-action="CreateOrEdit" class="btn btn-outline-success mb-4">
    <i class="fa-solid fa-user-plus"></i> Crear nuevo propietario
</a>

<form method="get" asp-action="Index" class="row g-2 mb-4">
    <div class="col-md-5">
        <input type="text" name="busqueda" value="@ViewBag.Busqueda" class="form-control"
            placeholder="üîç Buscar por nombre o apellido" />
    </div>

    <div class="col-md-7 d-flex gap-2">
        <input type="hidden" name="pagina" value="1" />

        <button type="submit" name="estado" value=""
            class="btn @(ViewBag.Estado == null ? "btn-secondary" : "btn-outline-secondary")">
            Todos
        </button>
        <button type="submit" name="estado" value="true"
            class="btn @(ViewBag.Estado is true ? "btn-success" : "btn-outline-success")">
            Activos
        </button>
        <button type="submit" name="estado" value="false"
            class="btn @(ViewBag.Estado is false ? "btn-danger" : "btn-outline-danger")">
            Inactivos
        </button>
    </div>
</form>


<table class="table table-dark table-bordered table-hover tabla-index">
    <thead class="bg-secondary text-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Dni)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Persona.Correo)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>

            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 0;
        }

        @foreach (var p in Model)
        {
            contador++;
            <tr>
                <td>@p.Id</td>
                <td>@p.Persona.Nombre</td>
                <td>@p.Persona.Apellido</td>
                <td>@p.Dni</td>
                <td>@p.Persona.Telefono</td>
                <td>@p.Persona.Correo</td>
                <td class="text-center">
                    @if (p.Estado)
                    {
                        <span class="text-success fw-bold"><i class="fa-solid fa-circle-check"></i></span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold"><i class="fa-solid fa-circle-xmark"></i></span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Detalles" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info me-1"
                        title="Ver detalles">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="CreateOrEdit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-warning me-1"
                        title="Editar">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                        data-bs-target="#confirmModal" data-id="@p.Id" data-nombre="@p.Persona.Nombre"
                        data-apellido="@p.Persona.Apellido" data-dni="@p.Dni" data-telefono="@p.Persona.Telefono"
                        data-correo="@p.Persona.Correo" title="Eliminar">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </td>
            </tr>
        }

        @for (int i = contador; i < 5; i++)
        {
            <tr>
                  <td colspan="8" class="text-muted text-center py-3"></td>         
            </tr>
        }
    </tbody>


</table>


<nav aria-label="Paginaci√≥n">
    <ul class="pagination justify-content-center my-4">

        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link @(paginaActual == 1 ? "bg-dark text-muted border border-dark opacity-50" : "bg-dark text-info border-info") rounded-start"
                asp-action="Index" asp-route-pagina="@(paginaActual - 1)">
                <i class="fa-solid fa-chevron-left me-1"></i> Anterior
            </a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link @(i == paginaActual ? "bg-info text-dark fw-bold border-info" : "bg-dark text-white border-secondary")"
                    asp-action="Index" asp-route-pagina="@i">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link @(paginaActual == totalPaginas ? "bg-dark text-muted border border-dark opacity-50" : "bg-dark text-info border-info") rounded-end"
                asp-action="Index" asp-route-pagina="@(paginaActual + 1)">
                Siguiente <i class="fa-solid fa-chevron-right ms-1"></i>
            </a>
        </li>
    </ul>
</nav>



<div class="validaciones-info mt-4 border-top pt-3 text-light">
    <h5>üõ†Ô∏è Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Implementar eliminaci√≥n</li>
        <li>‚úÖ Implementar detalles</li>
        <li>‚úÖ Paginaci√≥n</li>
        <li>‚ùå Validaciones antes de eliminar (si tiene o no propiedad)</li>
        <li>‚úÖ Colocar estado o filtrar por estado</li>
        <li>‚úÖ Buscar propietario</li>
        <li>‚úÖ ABM</li>
    </ul>
</div>



<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="modal-form" method="post" action="/Propietario/Baja">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabel">Confirmar eliminaci√≥n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro que quer√©s eliminar al siguiente propietario?</p>
                    <ul class="list-unstyled">
                        <li><strong>N¬∞ Interno:</strong> <span id="modal-id"></span></li>
                        <li><strong>Nombre:</strong> <span id="modal-nombre"></span> <span id="modal-apellido"></span>
                        </li>
                        <li><strong>DNI:</strong> <span id="modal-dni"></span></li>
                        <li><strong>Tel√©fono:</strong> <span id="modal-telefono"></span></li>
                        <li><strong>Correo:</strong> <span id="modal-correo"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="form-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Confirmar eliminaci√≥n</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmModal = document.getElementById('confirmModal');
            if (!confirmModal) return;
            confirmModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-id');
                const nombre = button.getAttribute('data-nombre');
                const apellido = button.getAttribute('data-apellido');
                const dni = button.getAttribute('data-dni');
                const telefono = button.getAttribute('data-telefono');
                const correo = button.getAttribute('data-correo');

                document.getElementById('modal-id').textContent = id;
                document.getElementById('modal-nombre').textContent = nombre;
                document.getElementById('modal-apellido').textContent = apellido;
                document.getElementById('modal-dni').textContent = dni;
                document.getElementById('modal-telefono').textContent = telefono;
                document.getElementById('modal-correo').textContent = correo;

                document.getElementById('form-id').value = id;
            });
        });
    </script>
}