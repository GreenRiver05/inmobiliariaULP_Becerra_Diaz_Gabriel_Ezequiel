@model inmobiliariaBD.Models.Propietario
@{
    ViewData["Title"] = "Detalle de Propietario";
    var inmuebles = ViewBag.Inmuebles as List<inmobiliariaBD.Models.Inmueble>;
}

<h2 class="text-light mb-4">üè† Detalle del Propietario</h2>

<div class="card bg-dark text-white border-secondary mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fa-solid fa-id-card"></i> Informaci√≥n del Propietario
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Nombre/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Nombre</dd>

                    <dt class="col-sm-4">Apellido/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Apellido</dd>

                    <dt class="col-sm-4">DNI</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>

                    <dt class="col-sm-4">Tel√©fono</dt>
                    <dd class="col-sm-8">@Model.Persona.Telefono</dd>
                </dl>
            </div>

            <div class="col-md-6 mb-3">
                <dl class="row">
                    <dt class="col-sm-4">Correo</dt>
                    <dd class="col-sm-8">@Model.Persona.Correo</dd>

                    <dt class="col-sm-4">Direcci√≥n</dt>
                    <dd class="col-sm-8">@Model.Persona.Direccion</dd>

                    <dt class="col-sm-4">Localidad</dt>
                    <dd class="col-sm-8">@Model.Persona.Localidad</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                            @(Model.Estado ? "Activo" : "Inactivo")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<h4 class="text-light mb-3">üì¶ Inmuebles asociados</h4>

@if (inmuebles != null && inmuebles.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover tabla-index">
            <thead class="bg-secondary text-light">
                <tr>
                    <th>Direcci√≥n</th>
                    <th>Localidad</th>
                    <th>Uso</th>
                    <th>Ambientes</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inmueble in inmuebles)
                {
                    <tr>
                        <td>@inmueble.Direccion</td>
                        <td>@inmueble.Localidad</td>
                        <td>@inmueble.Uso</td>
                        <td>@inmueble.Ambientes</td>
                        <td>$ @inmueble.Precio</td>
                        <td>
                            @switch (inmueble.Estado)
                            {
                                case "Disponible":
                                    <span class="badge bg-success">Disponible</span>
                                    break;
                                case "Alquilado":
                                    <span class="badge bg-warning text-dark">Alquilado</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">No Disponible</span>
                                    break;
                            }
                        </td>
                        <td class="text-center">
                            <a asp-controller="Inmueble" asp-action="Detalles" asp-route-id="@inmueble.Id"
                               class="btn btn-sm btn-outline-info" title="Ver inmueble">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-dark">Este propietario no tiene inmuebles registrados.</div>
}

<a asp-action="Index" class="btn btn-outline-secondary mt-4">
    <i class="fa-solid fa-arrow-left"></i> Volver al listado
</a>
