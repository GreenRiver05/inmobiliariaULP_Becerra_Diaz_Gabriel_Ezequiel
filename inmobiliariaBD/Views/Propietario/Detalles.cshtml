@model inmobiliariaBD.Models.Propietario
@{
    ViewData["Title"] = "Detalle de Propietario";
    var inmuebles = ViewBag.Inmuebles as List<inmobiliariaBD.Models.Inmueble>;
}

<h2 class="mb-3">üè† Detalle del Propietario</h2>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        Informaci√≥n del Propietario
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Nombre/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Nombre</dd>

                    <dt class="col-sm-4">Apellido/s</dt>
                    <dd class="col-sm-8">@Model.Persona.Apellido</dd>

                    <dt class="col-sm-4">DNI</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>

                    <dt class="col-sm-4">Tel√©fono</dt>
                    <dd class="col-sm-8">@Model.Persona.Telefono</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Correo</dt>
                    <dd class="col-sm-8">@Model.Persona.Correo</dd>

                    <dt class="col-sm-4">Direcci√≥n</dt>
                    <dd class="col-sm-8">@Model.Persona.Direccion</dd>

                    <dt class="col-sm-4">Localidad</dt>
                    <dd class="col-sm-8">@Model.Persona.Localidad</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">@((Model.Estado) ? "Activo" : "Inactivo")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<h4 class="mb-3">üì¶ Inmuebles asociados</h4>

@if (inmuebles != null && inmuebles.Any())
{
    <table class="tabla-index table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Direcci√≥n</th>
                <th>Localidad</th>
                <th>Uso</th>
                <th>Ambientes</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inmueble in inmuebles)
            {
                <tr>
                    <td>@inmueble.Direccion</td>
                    <td>@inmueble.Localidad</td>
                    <td>@inmueble.Uso</td>
                    <td>@inmueble.Ambientes</td>
                    <td>$ @inmueble.Precio</td>
                    <td>
                        @if (inmueble.Estado == "Disponible")
                        {
                            <span class="badge bg-success">Disponible</span>
                        }
                        else if (inmueble.Estado == "Alquilado")
                        {
                            <span class="badge bg-warning text-dark">Alquilado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No Disponible</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Inmueble" asp-action="Detalles" asp-route-id="@inmueble.Id"
                            class="btn btn-info btn-sm">üîç Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Este propietario no tiene inmuebles registrados.</div>
}

