@model inmobiliariaBD.Models.Usuario

@{
    ViewData["Title"] = Model.Id == 0 ? "Nuevo Usuario"  : (ViewBag.EsPerfil == true ? "Editar Perfil" : "Editar Usuario");
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3"
        style="background-color: #1e2a38;">
        <i class="fa-solid fa-circle-info me-2 text-info"></i>
        <span class="fw-semibold text-info">Info:</span> @TempData["Mensaje"]
    </div>
}

<h2 class="text-light mb-4">
    @(Model.Id == 0
        ? "üÜï Nuevo Usuario"
        : (ViewBag.EsPerfil == true
        ? "üë§ Editar Perfil"
        : "‚úèÔ∏è Editar Usuario"))
</h2>

<form asp-action="CreateOrEdit" method="post" enctype="multipart/form-data"
    class="bg-dark text-white p-4 rounded border border-secondary">
    
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()

  @if (ViewBag.EsPerfil is true)
    {
        <input type="hidden" name="esPerfil" value="true" />
        <input typy="hidden" asp-for="Rol"/>
    }
    <div class="row">
        @if (ViewBag.EsPerfil is true)
        {
            <!-- Dos columnas: avatar + datos -->
            <div class="col-md-4 d-flex flex-column align-items-center">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <label class="form-label">Avatar actual</label>
                    <img src="~/@Model.Avatar" alt="Avatar" class="rounded-circle border border-light mb-2"
                        style="width: 150px; height: 150px; object-fit: cover;" />
                    <small class="text-muted text-center">Pod√©s subir una nueva imagen para reemplazarla</small>
                }

                <label asp-for="AvatarFile" class="form-label mt-3">Cambiar avatar</label>
                <input asp-for="AvatarFile" type="file" class="form-control bg-dark text-white border-light" />
            </div>

            <div class="col-md-8">
                @Html.Partial("_DatosUsuario", Model)
                <div class="row g-3 mt-3">
                
                    <div class="col-md-6">
                        <label asp-for="Persona.Direccion" class="form-label"></label>
                        <input asp-for="Persona.Direccion" class="form-control bg-dark text-white border-light" />
                        <span asp-validation-for="Persona.Direccion" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Persona.Localidad" class="form-label"></label>
                        <input asp-for="Persona.Localidad" class="form-control bg-dark text-white border-light" />
                        <span asp-validation-for="Persona.Localidad" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Una sola columna: datos ocupan todo el ancho -->
            <div class="row">
                <div class="col-12">
                    @Html.Partial("_DatosUsuario", Model)
                </div>
            </div>
        }
    </div>


    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary px-4">üíæ Guardar</button>
    </div>
</form>


<div class="d-flex justify-content-center gap-3 mt-4">

    @if (User.IsInRole("Admin") && ViewBag.EsPerfil != true && Model.Id != 0)
    {
        <form asp-action="ModificarEstado" asp-controller="Usuario" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-sm @(Model.Estado ? "btn-outline-danger" : "btn-outline-success")">
                @(Model.Estado ? "Dar de baja" : "Dar de alta")
            </button>
        </form>

    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">‚¨ÖÔ∏è Volver al listado</a>
    }


</div>

<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Validar formato de correo electr√≥nico</li>
        <li>‚úÖ Validar campos obligatorios</li>
        <li>‚úÖ Combo din√°mico de roles</li>
        <li>‚úÖ Carga de avatar</li>
        <li>‚úÖ Mostrar estado y permitir alta/baja</li>
    </ul>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("toggleClave").addEventListener("click", function () {
            const input = document.getElementById("claveInput");
            const icono = document.getElementById("iconoClave");
            const esPassword = input.type === "password";
            input.type = esPassword ? "text" : "password";
            icono.classList.toggle("fa-eye");
            icono.classList.toggle("fa-eye-slash");
        });
    </script>
}