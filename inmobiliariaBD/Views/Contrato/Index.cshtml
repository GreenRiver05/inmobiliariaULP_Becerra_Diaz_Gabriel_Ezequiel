@model IEnumerable<inmobiliariaBD.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
    var busqueda = ViewBag.Busqueda as string ?? "";
    var estado = ViewBag.Estado as string ?? "";
    var desde = ViewBag.Desde as string ?? "";
    var hasta = ViewBag.Hasta as string ?? "";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info text-light border-light">@TempData["Mensaje"]</div>
}

<h2 class="text-light mb-4">üìÑ Listado de Contratos</h2>

<a asp-action="CreateOrEdit" class="btn btn-outline-success mb-4">
    <i class="fa-solid fa-file-circle-plus"></i> Crear nuevo Contrato
</a>

<form method="get" asp-action="Index" class="row g-2 mb-4">
    <input type="hidden" name="pagina" value="1" />

    <!-- Filtros por estado -->
    <div class="col-12 d-flex flex-wrap gap-2 mb-2">
        <button type="submit" name="estadoPago" value=""
            class="btn @(string.IsNullOrEmpty(estado) ? "btn-secondary" : "btn-outline-secondary")">Todos</button>

        <button type="submit" name="estadoPago" value="Vigente"
            class="btn @(estado == "Vigente" ? "btn-success" : "btn-outline-success")">Vigentes</button>

        <button type="submit" name="estadoPago" value="Finalizado"
            class="btn @(estado == "Finalizado" ? "btn-secondary" : "btn-outline-secondary")">Finalizados</button>

        <button type="submit" name="estadoPago" value="Rescindido"
            class="btn @(estado == "Rescindido" ? "btn-danger" : "btn-outline-danger")">Rescindidos</button>
    </div>

    <!-- Filtros por b√∫squeda y fechas -->
    <div class="col-md-4">
        <input type="text" name="busqueda" value="@busqueda" class="form-control"
            placeholder="üîç Buscar por inquilino o direcci√≥n" />
    </div>
    <div class="col-md-3">
        <input type="date" name="desde" value="@desde" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="date" name="hasta" value="@hasta" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-outline-light w-100">Buscar</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-dark table-bordered table-hover tabla-index">
        <thead class="bg-secondary text-light">
            <tr>
                <th>ID</th>
                <th>Inquilino</th>
                <th>Inmueble</th>
                <th>Monto</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Inquilino.Persona.ToStringSimple()</td>
                    <td>@c.Inmueble.Direccion</td>
                    <td>$@c.Monto</td>
                    <td>@c.Desde.ToString("dd/MM/yyyy")</td>
                    <td>@c.Hasta.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(c.Estado == "Vigente" ? "bg-success" : c.Estado == "Finalizado" ? "bg-secondary" : "bg-danger") px-3 py-2">
                            @c.Estado
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Detalles" asp-route-id="@c.Id" class="btn btn-sm btn-outline-info me-1">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-action="CreateOrEdit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-warning me-1">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                data-bs-target="#confirmContratoModal"
                                data-contrato-id="@c.Id"
                                data-inquilino="@c.Inquilino.Persona.ToStringSimple()"
                                data-direccion="@c.Inmueble.Direccion"
                                data-monto="@c.Monto"
                                data-desde="@c.Desde.ToString("dd/MM/yyyy")"
                                data-hasta="@c.Hasta.ToString("dd/MM/yyyy")"
                                data-estado="@c.Estado">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Paginaci√≥n -->
<nav aria-label="Paginaci√≥n">
    <ul class="pagination justify-content-center my-4">
        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
            <a class="page-link @(paginaActual == 1 ? "bg-dark text-muted border-dark opacity-50" : "bg-dark text-info border-info")"
               asp-action="Index" asp-route-pagina="@(paginaActual - 1)"
               asp-route-busqueda="@busqueda" asp-route-estado="@estado"
               asp-route-desde="@desde" asp-route-hasta="@hasta">
                <i class="fa-solid fa-chevron-left me-1"></i> Anterior
            </a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == paginaActual ? "active" : "")">
                <a class="page-link @(i == paginaActual ? "bg-info text-dark border-info" : "bg-dark text-info border-info")"
                   asp-action="Index" asp-route-pagina="@i"
                   asp-route-busqueda="@busqueda" asp-route-estado="@estado"
                   asp-route-desde="@desde" asp-route-hasta="@hasta">@i</a>
            </li>
        }

        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
            <a class="page-link @(paginaActual == totalPaginas ? "bg-dark text-muted border-dark opacity-50" : "bg-dark text-info border-info")"
               asp-action="Index" asp-route-pagina="@(paginaActual + 1)"
               asp-route-busqueda="@busqueda" asp-route-estado="@estado"
               asp-route-desde="@desde" asp-route-hasta="@hasta">
                Siguiente <i class="fa-solid fa-chevron-right ms-1"></i>
            </a>
        </li>
    </ul>
</nav>


<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Implementar eliminaci√≥n</li>
        <li>‚úÖ Paginaci√≥n</li>
        <li>‚ùå Buscar</li>
        <li>‚ùå Filtrar por estado</li>
        <li>‚úÖ Implementar eliminar</li>
        <li>‚úÖ Implementar detalles</li>
        <li>‚ùå Validaci√≥n antes de eliminar si a√∫n est√° vigente</li>
        <li>‚ùå Validaci√≥n antes de eliminar si tiene pagos o multas</li>
        <li>‚úÖ ABM</li>
    </ul>
</div>

<div class="modal fade" id="confirmContratoModal" tabindex="-1" aria-labelledby="modalLabelContrato" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form id="modal-contrato-form" method="post" action="/Contrato/Baja">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="modalLabelContrato">Confirmar eliminaci√≥n</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro que quer√©s eliminar el siguiente contrato?</p>
                    <ul class="list-unstyled">
                        <li><strong>Contrato N¬∞:</strong> <span id="modal-contrato-id"></span></li>
                        <li><strong>Inquilino:</strong> <span id="modal-inquilino"></span></li>
                        <li><strong>Direcci√≥n Inmueble:</strong> <span id="modal-direccion"></span></li>
                        <li><strong>Monto:</strong> $<span id="modal-monto"></span></li>
                        <li><strong>Desde:</strong> <span id="modal-desde"></span></li>
                        <li><strong>Hasta:</strong> <span id="modal-hasta"></span></li>
                        <li><strong>Estado:</strong> <span id="modal-estado"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="form-contrato-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-outline-danger">Confirmar eliminaci√≥n</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmContratoModal = document.getElementById('confirmContratoModal');
            if (!confirmContratoModal) return;

            confirmContratoModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                document.getElementById('modal-contrato-id').textContent = button.getAttribute('data-contrato-id');
                document.getElementById('modal-inquilino').textContent = button.getAttribute('data-inquilino');
                document.getElementById('modal-direccion').textContent = button.getAttribute('data-direccion');
                document.getElementById('modal-monto').textContent = button.getAttribute('data-monto');
                document.getElementById('modal-desde').textContent = button.getAttribute('data-desde');
                document.getElementById('modal-hasta').textContent = button.getAttribute('data-hasta');
                document.getElementById('modal-estado').textContent = button.getAttribute('data-estado');

                document.getElementById('form-contrato-id').value = button.getAttribute('data-contrato-id');
            });
        });
    </script>
}