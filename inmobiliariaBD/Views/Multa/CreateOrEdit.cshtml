@model inmobiliariaBD.Models.Multa

@{
    ViewData["Title"] = Model.Id == 0 ? "Nueva Multa" : "Editar Multa";
    var contratoFijo = ViewBag.ContratoFijo as bool? ?? false;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-danger shadow-sm px-4 py-3 rounded-3"
        style="background-color: #2a1e1e;">
        <i class="fa-solid fa-triangle-exclamation me-2 text-danger"></i>
        <span class="fw-semibold text-danger">Alerta:</span> @TempData["Mensaje"]
    </div>
}


<h2 class="text-light mb-4 text-center">
    @(Model.Id == 0 ? "‚ö†Ô∏è Nueva Multa" : "‚úèÔ∏è Editar Multa")
</h2>

<form asp-action="CreateOrEdit" method="post" class="bg-dark text-white p-4 rounded border border-secondary">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="ContratoId" class="form-label">Contrato</label>
            @if (contratoFijo)
            {
                <select asp-for="ContratoId" asp-items="ViewBag.Contratos"
                    class="form-select bg-dark text-white border-light" disabled="disabled"></select>

                <input type="hidden" asp-for="ContratoId" />
                <input type="hidden" name="volverAContrato" value="true" />
            }
            else
            {
                <select asp-for="ContratoId" asp-items="ViewBag.Contratos"
                    class="form-select bg-dark text-white border-light"></select>
            }

            <span asp-validation-for="ContratoId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Monto" class="text-danger small"></span>
        </div>
    </div>


    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <label asp-for="FechaAviso" class="form-label">Fecha de aviso</label>
            <input asp-for="FechaAviso" type="date" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="FechaAviso" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="FechaTerminacion" class="form-label">Fecha de terminaci√≥n</label>
            <input asp-for="FechaTerminacion" type="date" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="FechaTerminacion" class="text-danger small"></span>
        </div>
    </div>


    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-danger px-4">üíæ Guardar</button>
    </div>
</form>


<div class="d-flex justify-content-center mt-4">
    @if (contratoFijo)
    {
        <a asp-controller="Contrato" asp-action="Detalles" asp-route-id="@Model.ContratoId"
            class="btn btn-outline-secondary me-2">
            <i class="fa-solid fa-arrow-left"></i> Volver al contrato
        </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fa-solid fa-arrow-left"></i> Volver al listado
        </a>
    }

</div>


<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>üîç Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>‚úÖ Validar monto como n√∫mero decimal</li>
        <li>‚úÖ Validar que fecha de terminaci√≥n sea posterior a aviso</li>
        <li>‚ùå Mostrar resumen del contrato vinculado</li>
        <li>‚ùå Mostrar estado de cumplimiento</li>
    </ul>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}