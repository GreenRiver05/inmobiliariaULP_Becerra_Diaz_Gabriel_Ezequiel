@model inmobiliariaBD.Models.Multa

@{
    ViewData["Title"] = Model.Id == 0 ? "Nueva Multa" : "Editar Multa";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert text-white bg-opacity-75 border-start border-4 border-danger shadow-sm px-4 py-3 rounded-3" style="background-color: #2a1e1e;">
        <i class="fa-solid fa-triangle-exclamation me-2 text-danger"></i>
        <span class="fw-semibold text-danger">Alerta:</span> @TempData["Mensaje"]
    </div>
}

<h2 class="text-light mb-4 text-center">
    @(Model.Id == 0 ? "⚠️ Nueva Multa" : "✏️ Editar Multa")
</h2>

<form asp-action="CreateOrEdit" method="post" class="bg-dark text-white p-4 rounded border border-secondary">
    <input type="hidden" asp-for="Id" />

    <!-- Fila 1: Contrato + Monto -->
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="ContratoId" class="form-label">Contrato</label>
            <select asp-for="ContratoId" asp-items="ViewBag.Contratos" class="form-select bg-dark text-white border-light"></select>
            <span asp-validation-for="ContratoId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="Monto" class="text-danger small"></span>
        </div>
    </div>

    <!-- Fila 2: Fechas -->
    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <label asp-for="FechaAviso" class="form-label">Fecha de aviso</label>
            <input asp-for="FechaAviso" type="date" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="FechaAviso" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="FechaTerminacion" class="form-label">Fecha de terminación</label>
            <input asp-for="FechaTerminacion" type="date" class="form-control bg-dark text-white border-light" />
            <span asp-validation-for="FechaTerminacion" class="text-danger small"></span>
        </div>
    </div>

    <!-- Botón guardar -->
    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-danger px-4">💾 Guardar</button>
    </div>
</form>

<!-- Botón volver -->
<div class="d-flex justify-content-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado
    </a>
</div>

<!-- Validaciones -->
<div class="validaciones-info mt-5 text-light border-top pt-3">
    <h5>🔍 Validaciones y/o implementaciones:</h5>
    <ul class="small">
        <li>✅ Validar monto como número decimal</li>
        <li>✅ Validar que fecha de terminación sea posterior a aviso</li>
        <li>❌ Mostrar resumen del contrato vinculado</li>
        <li>❌ Mostrar estado de cumplimiento</li>
    </ul>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
