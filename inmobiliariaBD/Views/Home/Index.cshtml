@{
    // Uso @{ ... } para múltiples líneas de código Razor
    ViewData["Title"] = "Home Page";
    //// ViewData permite pasar datos simples entre controlador, vista y layout.

}

@if (User.IsInRole("Admin"))
{
    <div class="text-center text-light bg-opacity-75 border-start border-4 border-info shadow-sm px-4 py-3 rounded-3 mb-4"
         style="background-color: #1e2a38;">
        <i class="fa-solid fa-user-shield me-2 text-info"></i>
        <span class="fw-semibold text-info">Acceso completo:</span> puede gestionar usuarios y eliminar entidades.
    </div>
}

<div class="container text-center mt-3 mb-6" style="max-width: 1000px;">
    <h1 class="text-light mb-3">Sistema de Gestión Inmobiliaria</h1>
    <p class="text-muted small mb-4">Administra propietarios, inmuebles, inquilinos, contratos y pagos.</p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 px-2">

        @if (User.IsInRole("Admin"))
        {
            <!-- Tarjeta Usuarios -->
            <div class="col">
                <a asp-controller="Usuario" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-users-gear fa-lg mb-2"></i>
                            <h6 class="card-title">Usuarios</h6>
                            <p class="card-text small text-wrap">Gestioná roles, accesos y perfiles del sistema.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!-- Tarjeta Propietarios -->
        <div class="col">
            <a asp-controller="Propietario" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-user-tie fa-lg mb-2"></i>
                        <h6 class="card-title">Propietarios</h6>
                        <p class="card-text small text-wrap">Gestioná los dueños de los inmuebles.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta Inmuebles -->
        <div class="col">
            <a asp-controller="Inmueble" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-building fa-lg mb-2"></i>
                        <h6 class="card-title">Inmuebles</h6>
                        <p class="card-text small text-wrap">Administrá propiedades disponibles y suspendidas.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta Inquilinos -->
        <div class="col">
            <a asp-controller="Inquilino" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-user fa-lg mb-2"></i>
                        <h6 class="card-title">Inquilinos</h6>
                        <p class="card-text small text-wrap">Registrá y gestioná los clientes que alquilan.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta Contratos -->
        <div class="col">
            <a asp-controller="Contrato" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-file-contract fa-lg mb-2"></i>
                        <h6 class="card-title">Contratos</h6>
                        <p class="card-text small text-wrap">Creá, renová o finalizá contratos de alquiler.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta Pagos -->
        <div class="col">
            <a asp-controller="Pago" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-money-bill-wave fa-lg mb-2"></i>
                        <h6 class="card-title">Pagos</h6>
                        <p class="card-text small text-wrap">Registrá pagos mensuales y multas.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta Multas -->
        <div class="col">
            <a asp-controller="Multa" asp-action="Index" class="text-decoration-none">
                <div class="card bg-dark text-white shadow-sm h-100" style="min-height: 140px;">
                    <div class="card-body p-3">
                        <i class="fa-solid fa-file-circle-exclamation fa-lg mb-2"></i>
                        <h6 class="card-title">Multas</h6>
                        <p class="card-text small text-wrap">Gestioná penalizaciones por incumplimientos.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>